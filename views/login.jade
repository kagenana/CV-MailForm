doctype 5
html
  head
    title= title
    link(rel="stylesheet", href="/stylesheets/style.css" ,type="text/css")
    link(rel="stylesheet", href="/stylesheets/bootstrap.min.css" ,type="text/css")
    link(rel="stylesheet", href="/stylesheets/bootstrap-responsive.min.css" ,type="text/css")
    script(src="/javascripts/jquery.min.js", type="text/javascript")
    script(src="/javascripts/jquery.validate.min.js", type="text/javascript")
    script(src="/javascripts/bootstrap.min.js", type="text/javascript")
    style(type="text/css")
      body {
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
      }
      .container-login {
        top: 50%;
        margin-top: 50px;
      }
      .form-login {
        width: 350px;
        padding-top: 20px;
        padding-bottom: 20px;
        padding-left: 40px;
        padding-right: 40px;
        margin: 0 auto;
      }
      .form-login-validate {
        line-height: 15px;
        font-size: 15px;
      }
  body
    block content
      .container.container-login
        .hero-unit.form-login(style="background-color: #ccc;")
          p(align="center", style="font-size: 14px; font-weight: 900; margin-bottom: 15px;")= title
          .row-fluid
            - if(messages)
                each message in messages
                  .alert.alert-error.form-login-validate
                    button.close(data-dismiss="alert")&times;
                    .form-login-validate= messages
            form#loginForm(method="post", action="/signup")
              label
                b ユーザID
              input(type="text", name="id", placeholder="ユーザID")
              label
                b パスワード
              
              input(type="password", name="password", placeholder="パスワード")
                //label.checkbox Keep Login
                    input(type="checkbox")
              br
              input.btn.btn-primary(type="submit", value="ログイン", style="margin-top: 15px;")
            script(type="text/javascript")
              $(function() {
                $('#loginForm').validate({
                  rules : {
                    'id' : { required: true },
                    'password' : { required: true }
                  },
                  messages : {
                    'id' : { required: "入力必須項目です。" },
                    'password' : { required: "入力必須項目です。" }
                  },
                  errorElement: "label",
                  errorClass: "alert alert-error"
                });
              });